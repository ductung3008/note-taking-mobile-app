<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="@color/app_background"
        tools:context=".ui.auth.RegisterActivity">

    <!-- Title -->
    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_register"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email -->
    <TextView
            android:id="@+id/tvEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_email"
            android:textColor="#2196F3"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

    <EditText
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="@string/tv_email"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:background="@drawable/rounded_edittext_background"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvEmailLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    <!-- Password -->
    <TextView
            android:id="@+id/tvPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_password"
            android:textColor="#2196F3"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/etEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

    <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="@string/tv_password"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:background="@drawable/rounded_edittext_background"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvPasswordLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    <!-- Repeat Password -->
    <TextView
            android:id="@+id/tvRepeatPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_repassword"
            android:textColor="#2196F3"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/etPassword"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

    <EditText
            android:id="@+id/etRepeatPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="@string/tv_repassword"
            android:inputType="textPassword"
            android:autofillHints="@null"
            android:background="@drawable/rounded_edittext_background"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvRepeatPasswordLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    <!-- Repeat Password -->
    <TextView
            android:id="@+id/tvDisplayNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_display_name"
            android:textColor="#2196F3"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/etRepeatPassword"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

    <EditText
            android:id="@+id/etDisplayName"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="@string/tv_display_name"
            android:inputType="text"
            android:autofillHints="@null"
            android:background="@drawable/rounded_edittext_background"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvDisplayNameLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    <!-- Register Button with ProgressBar -->
    <FrameLayout
            android:id="@+id/btnRegisterContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etDisplayName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/tv_register"
                android:textColor="@android:color/white"
                android:backgroundTint="#2196F3"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="12dp" />

        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:visibility="gone" />
    </FrameLayout>

    <!-- Social Buttons -->
    <LinearLayout
            android:id="@+id/socialButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btnRegisterContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:weightSum="2">

        <!-- Facebook Button -->
        <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/tv_facebook"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_facebook"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                android:backgroundTint="#1877F2"
                app:cornerRadius="24dp"
                android:elevation="2dp" />

        <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

        <!-- Google Button -->
        <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="@string/tv_google"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:icon="@drawable/ic_google"
                app:iconGravity="textStart"
                app:iconTint="@null"
                app:iconPadding="12dp"
                app:iconSize="20dp"
                android:backgroundTint="@color/white"
                app:cornerRadius="24dp"
                android:elevation="2dp" />
    </LinearLayout>

    <!-- Sign in link -->
    <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_login_link"
            android:textColor="#2196F3"
            app:layout_constraintTop_toBottomOf="@id/socialButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
